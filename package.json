{
  "name": "xbox_profiles_back_end",
  "type": "module",
  "version": "1.0.0",
  "description": "Back-end layer of the Xbox Profiles",
  "main": "index.js",
  "scripts": {
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
